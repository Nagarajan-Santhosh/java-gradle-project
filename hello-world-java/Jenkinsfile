pipeline {
    agent any

    stages {
        stage('git clone') {
            steps {
                git credentialsId: 'dockerhub', url: 'https://github.com/Nagarajan-Santhosh/java-gradle-project.git/'
            }
        }
        stage('Build Docker Image') {
            steps {
               sh('sudo docker build -t santhoshsp/hello-world-docker:$BUILD_NUMBER .')
            }
        }
        stage('Push Docker Image') {
            steps {
                sh('sudo docker push santhoshsp/hello-world-docker:$BUILD_NUMBER')
            }
        }
    }
}
